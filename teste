def navios(campo, i, j, v):  # verificando campos para saber o tamanho dos navios
    if campo[i][j] == '#':
        campo[i][j] = v
        navio[v] += 1

    else:
        return 


# limitando tamanho do tabuleiro
    if i - 1 >= 0:
        navios(campo, i-1, j, v)
    
    if i + 1 < h:
        navios(campo, i+1, j, v)

    if j - 1 >= 0:
        navios(campo, j-1, i, v)

    if j + 1 < c:
        navios(campo, j+1, i, v)

def tiros(d): # coordenadas dos tiros/disparos
    for g in range(d):
        i, j = map(int, input().split()) # Função map pega uma lista e transforma em uma nova lista
        try:
            espaco = int(campo[i - 1][j - 1])
            navio[espaco] -=1 
        except:
            continue
